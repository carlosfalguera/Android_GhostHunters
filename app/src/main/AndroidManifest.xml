<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.upc.ac.jorge.GhostHunters">
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="GhostHunters"
        android:screenOrientation="portrait"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">
        <activity android:name="edu.upc.ac.jorge.GhostHunters.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.upc.ac.jorge.GhostHunters.DisplayAbsOrientation"
            android:parentActivityName="edu.upc.ac.jorge.GhostHunters.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.upc.ac.jorge.GhostHunters.MainActivity" />
        </activity>
        <activity android:name="edu.upc.ac.jorge.GhostHunters.QDisplayAbsOrientation">
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.upc.ac.jorge.GhostHunters.MainActivity" />
        </activity>
        <activity android:name="edu.upc.ac.jorge.GhostHunters.QDisplayRelativeOrientation">
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.upc.ac.jorge.GhostHunters.MainActivity" />
        </activity>
        <activity android:name="edu.upc.ac.jorge.GhostHunters.TestQuaternions">
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.upc.ac.jorge.GhostHunters.MainActivity" />
        </activity>
    </application>

</manifest>